<style type="text/css">
  .buttom-spacing{
      margin-bottom: 20px
  }
</style>
<div class="span3">
  <table class="table" style="width:30%"></table>
</div>
<div class="span5">
  <div class="row-fluid">
    <form class="well form-inline" method="post" action="<%= @form_action || "login" %>" id="login-form">
      <input type="hidden" id="lt" name="lt" value="<%= escape_html @lt %>"/>
      <input type="hidden" id="service" name="service" value="<%= escape_html @service %>"/>

      <fieldset style="margin-left:33% ">

        <div class="control-group buttom-spacing">
          <div class="controls">
            <img alt="Global_logo" height="47" src="http://p.xingcloud.com/plugin_assets/redmine_elextech/images/global_logo.png?1328680176" width="125">
          </div>
        </div>
        <div class="control-group buttom-spacing">
          <div class="controls">
            <input class="input" type="text" id="username" name="username" placeholder="<%= t.label.username %> "/>
          </div>
        </div>
        <div class="control-group buttom-spacing">
          <div class="controls">
            <input class="input" type="password" id="password" name="password" autocomplete="off" placeholder="<%= t.label.password %>"/>
          </div>
        </div>
        <div class="control-group buttom-spacing">
          <div class="controls">
            <a href="http://p.xingcloud.com/account/lost_password"><%= t.button.lost_password %>?</a>
          </div>
        </div>

      </fieldset>
      <div class="form-actions" style="background-color: whiteSmoke;">
        <div style="margin-left: 32%">
          <button type="submit" class="btn btn-primary"><%= t.button.login %></button>
          <a class="btn" href="http://p.xingcloud.com/account/register"><%= t.button.register %></a>
        </div>
      </div>

      <script type="text/javascript">
          //<![CDATA[
          $(function () {
              $('#username').focus();
          })
          //]]>
      </script>

    </form>
  </div>
</div>
<div class="span4" style="width:25%"></div>